@model ProjetAppli_v1.Models.parametrageHabilitations

@{
    ViewBag.Title = "";
}
<script>
    $(document).ready(function () {
        $('.date').datepicker
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section id="main">

        <div class="col-md-6">
            <h3>PROFIL</h3>
            <form class="form-horizontal" role="form">

                <!--Debut de validite-->
                <div class="form-group">
                    <div class="col-sm-3" align="left" id="hblocLog1">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.LabelFor(model => model.debutValidite, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-sm-offset-0 col-sm-6">
                        @Html.EditorFor(model => model.debutValidite, new { htmlAttributes = new { @class = "form-control date" } })
                        @Html.ValidationMessageFor(model => model.debutValidite, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--nom-->
                <div class="form-group">
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.nom, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-sm-offset-2 col-sm-7" id="hblocLog1">
                        @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--email-->
                <div class="form-group">
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-sm-offset-2 col-sm-7" id="hblocLog1">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--domaine fonctionnel-->
                <div class="form-group">
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.domaines, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-7" id="hblocLog1">
                            @Html.EditorFor(model => model.domaines, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.domaines, "", new { @class = "text-danger" })
                            <select multiple='multiple' size='3'>
                                <option>Dématérialiser</option>
                                <option>PayerEncaisser</option>
                            </select>
                        </div>
                        <img src="images/plus_bouton.png" />
                        <img src="images/moins_bouton.png" />
                    </div>
                </div>

                <br>
                <br>
                <br>
                <br>
                <br>

                <!--zone de boutons-->
                <div class="container">
                    <div class="row" method='post' action="#">
                        <div class="col-lg-offset-2 col-lg-3"><input id="btnAjouter" type="button" value="Ajouter un profil" action="create" method="post" /></div>
                        <div class="col-lg-offset-2 col-lg-3"><input id="btnSupprimer" type="button" value="Supprimer un profil" action="delete" method="post" /></div>
                    </div>

                    <script type="text/javascript">
                        $('#btnAjouter').click(function ()
                        {
                            {document.location.href="paramHabilitationsValidation.html"}
                         })
                    </script>
                    <script type="text/javascript">
                        $('#btnSupprimer').click(function ()
                        {
                            alert('Voulez-vous supprimer ce profil ?');

                            {document.location.href="parametragesHabilitations.html"}
                         })
                    </script>
                    
                </div>


            </form>
        </div>

        <div class="col-md-6">
            <h3> &nbsp</h3>
            <form class="form-horizontal" role="form">

                <!--date de fin-->
                <div class="form-group">
                    <div class="col-sm-3" align="left" id="hblocAno4">
                        @Html.LabelFor(model => model.finValidite, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-sm-offset-0 col-sm-6">
                        @Html.EditorFor(model => model.finValidite, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.finValidite, "", new { @class = "text-danger" })

                    </div>
                </div>

                <!--prenom-->
                <div class="form-group">
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.prenom, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                    <div class="col-sm-offset-2 col-sm-7" id="hblocLog1">
                        @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.prenom, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--mot de passe-->
                <div class="form-group">
                    <div class="col-sm-1">
                        @Html.LabelFor(model => model.motDePasse, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.motDePasse, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.motDePasse, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!--rôle-->
                <div class="form-group">
                    <div class="col-sm-1">
                        <label for="Role" class="control-label">Rôle</label>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-7" id="hblocLog1">
                            <select multiple='multiple' size='3'>
                                <option>Administrateur</option>
                                <option>Utilisateur</option>
                            </select>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </section>
}



