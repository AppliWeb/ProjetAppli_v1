@model  ProjetAppli_v1.Models.UtilisateurTemporaire
@{
    ViewBag.Title = "Reinitialisation du mot de passe";
}
<section id="main" class="container">

    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("ResetPassword", "utilisateurs", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <span class = "col-md-2 control-label">Mot de passe temporaire</span>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.motDePasseTemporaire, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <span class="col-md-2 control-label">Nouveau mot de passe</span>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.nouveauMotDePasse, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <span class="col-md-2 control-label">Confirmation nouveau mot de passe</span>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.confirmMotDePasse, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Réinitialiser" />
            </div>
        </div>
    }
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
